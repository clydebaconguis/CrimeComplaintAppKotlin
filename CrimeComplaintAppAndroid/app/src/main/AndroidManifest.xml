<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.online_crime_reporting_app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/justice"
        android:label="PCCA"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Online_Crime_Reporting_App"
        android:fullBackupContent="true">

        <activity
            android:name=".Public_user.AddReport"
            android:exported="true" />
        <activity
            android:name=".Public_user.NewsAndUpdate"
            android:exported="true" />
        <activity
            android:name=".Public_user.UserProfile"
            android:exported="true" />
        <activity
            android:name=".Public_user.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Public_user.SignInSignUp.Login"
            android:exported="true" >

        </activity>
    </application>

</manifest>